<%= form_with(model: servicio, local: true) do |form| %>
  <% if servicio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(servicio.errors.count, "error") %> prohibieron que este Servicio sea guardado:</h2>

      <ul>
      <% servicio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h5 class="text-center"><%= yield(:page_title) %></h5>
  
  <ul class="row">
    <li class="col-6 list-group-item">
      <%= form.label :nombre %>
      <%= form.text_field :nombre, id: :servicio_nombre, class: "form-control", required: true %>
    </li>

    <li class="col-6 list-group-item">
      <%= form.label :tipo_servicio_id, "Tipo de Servicio" %>
      <%= form.collection_select :tipo_servicio_id, TipoServicio.order(:tipo), :id, :tipo, {prompt: "Seleccione una opciÃ³n"}, {class: "form-control", required: true} %>
    </li>

    <li class="col-12 list-group-item">
      <div class="text-center">
        <%= form.submit "Guardar", class: "btn btn-primary btn-lg" %>
      </div>
    </li>
  </ul>
<% end %>
