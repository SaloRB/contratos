<% provide(:usuarios_active, 'active') %>
<% provide(:page_title, 'Nuevo Usuario') %>
<div class="login-form">
  <%= form_for @usuario do |f| %>
    <%= render 'partials/errores', object: f.object %>

    <div class="form-group">
      <%= f.text_field :email, {placeholder: 'Usuario', class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, {placeholder: 'Contraseña', class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, {placeholder: 'Confirmar Contraseña', class: "form-control"} %>
    </div>
    <label class="form-group checkbox" style="color: #606060">
      <%= f.check_box :admin %> Administrador
    </label>
    <div class="form-group">
      <%= f.submit "Crear Usuario", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
