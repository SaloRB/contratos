<%= form_with(model: tipo_servicio, local: true) do |f| %>
  <%= render 'partials/errores', object: f.object %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title text-center"><%= yield(:page_title) %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <div class="field">
          <%= f.text_field :tipo, id: :tipo_servicio_tipo, class: "form-control", required: true %>
        </div>
      </li>

      <li class="list-group-item">
        <div class="actions text-center">
          <%= f.submit "Guardar", class: "btn btn-primary btn-lg" %>
        </div>
      </li>
    </ul>
  </div>
<% end %>
<br>
