<%= form_with(model: tipo_servicio, local: true) do |form| %>
  <% if tipo_servicio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tipo_servicio.errors.count, "error") %> prohibieron que este Tipo de Servicio sea guardado:</h2>

      <ul>
      <% tipo_servicio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title text-center"><%= yield(:page_title) %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <div class="field">
          <%= form.text_field :tipo, id: :tipo_servicio_tipo, class: "form-control", required: true %>
        </div>
      </li>

      <li class="list-group-item">
        <div class="actions text-center">
          <%= form.submit "Guardar", class: "btn btn-primary btn-lg" %>
        </div>
      </li>
    </ul>
  </div>
<% end %>
<br>
