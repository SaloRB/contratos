<% provide(:sesiones_active, 'active') %>
<% provide(:page_title, 'Iniciar Sesión') %>
<div class="login-form">
	<%= form_tag sesiones_path do %>
	  <div class="form-group">
	    <%= text_field_tag :email, params[:email], {placeholder: 'Usuario', class: "form-control"} %>
	  </div>
	  <div class="form-group">
	    <%= password_field_tag :password, nil, {placeholder: "Contraseña", class: "form-control"} %>
	  </div>
	  <div class="form-group">
	  	<%= submit_tag "Iniciar Sesión", class: "btn btn-primary btn-block" %>
	  </div>
	<% end %>
</div>